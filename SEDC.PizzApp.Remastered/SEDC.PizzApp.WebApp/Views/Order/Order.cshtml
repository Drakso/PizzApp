@model OrderViewModel
@{
    ViewBag.Title = "Order Pizza";
}
<h1>Order pizza</h1>
<h3>@ViewBag.Error</h3>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="input-group input-group-lg">
                <span class="input-group-addon">@Html.LabelFor(x => x.FirstName)</span>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group input-group-lg">
                <span class="input-group-addon">@Html.LabelFor(x => x.LastName)</span>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="input-group input-group-lg">
                <span class="input-group-addon">@Html.LabelFor(x => x.Address)</span>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group input-group-lg">
                <span class="input-group-addon">@Html.LabelFor(x => x.Phone)</span>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
        </div>
    </div>
    @for (int i = 0; i < Model.Pizzas.Count; i++)
    {
        @Html.HiddenFor(x => x.Pizzas[i])
        <h1>Pizza no: @(i + 1)</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">@Html.LabelFor(x => x.Pizzas[i].Name)</span>
                    @Html.TextBoxFor(x => x.Pizzas[i].Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">@Html.LabelFor(x => x.Pizzas[i].Size)</span>
                    @Html.DropDownListFor(x => x.Pizzas[i].Size, Html.GetEnumSelectList(Model.Pizzas[i].Size.GetType()), new { @class = "form-control" })
                </div>
            </div>
        </div>
    }
    <button class="btn btn-default" type="submit"> Order </button>
}