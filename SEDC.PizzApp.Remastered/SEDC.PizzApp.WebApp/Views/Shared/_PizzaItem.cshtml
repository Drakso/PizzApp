@model PizzaViewModel
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <img height="150" src="~/images/@Model.Image" />
    </div>
    <div class="col-md-4">
        @Html.HiddenFor(x => x.Id)
        <h3>Pizza @Model.Name</h3>
        <h4>@Model.Price$</h4>
        <h5> + 2$ delivery fee</h5>
    </div>
</div>