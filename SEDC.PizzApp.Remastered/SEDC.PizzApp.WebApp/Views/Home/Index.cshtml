@model HomeViewModel
@{ 
    ViewBag.Title = "Welcome";
}
<div class="jumbotron">
    <h1>Welcome to the PizzApp</h1>
    <p>The best application for ordering pizza!</p>
    <p>
        <h3>Order your pizza NOW!</h3>
        @using (Html.BeginForm())
        {
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Order</button>
                </span>
                @Html.TextBoxFor(x => x.NumberOfPizzas, new { @class = "form-control" })
            </div>
        }
    </p>
</div>


